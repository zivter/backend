<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <script type="text/javascript" src="/jquery/jquery-3.2.1.min.js"></script>
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.css' />
    <!-- <script type="text/javascript" src="/bootstrap/js/bootstrap.js"></script> -->
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <%- include("./head.ejs")%>
        <div id="main">
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
            </ol>

            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>商品图片</th>
                            <th>商品标题</th>
                            <th>商品简介</th>
                            <th>库存数量</th>
                            <th>最后修改日期</th>
                            <th class="text-right">修改商品&emsp;&emsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(var i=0;i<list.length;i++){ %>
                            <tr>
                                <th class="th1"><a href="#"><img class="pic1" src="images/<%= list[i].path%>"/></a></th>
                                <th class="th2">
                                    <a href="#">
                                        <%= list[i].tittle%>
                                    </a>
                                </th>
                                <th class="th3">
                                    <a href="#">
                                        <%= list[i].main%>
                                    </a>
                                </th>
                                <th>
                                    <a href="#">
                                        <%= list[i].amout%>
                                    </a>
                                </th>
                                <th>
                                    <a href="#">
                                        <%= list[i].date%>
                                    </a>
                                </th>
                                <th class="th4 text-right">
                                    <a href="/article/change?id=<%= list[i].id%>" type="button" class="btn btn-warning">修改</a>
                                    <a href="/article/delete?id=<%= list[i].id%>" type="button" class="btn btn-danger">删除</a>
                                </th>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>

</body>

</html>